<?xml version="1.0"?>
<ruleset name="PHP Security Lint">
    <description>PHP Security Lint coding standard</description>

    <!-- Include the PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff names -->
    <arg value="s"/>

    <!-- Use colors -->
    <arg name="colors"/>

    <!-- Parallel processing -->
    <arg name="parallel" value="8"/>

    <!-- Extensions to check -->
    <arg name="extensions" value="php"/>
</ruleset>